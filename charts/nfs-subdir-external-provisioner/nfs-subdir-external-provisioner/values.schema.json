{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "replicaCount": {
            "type": "integer",
            "default": 1
        },
        "strategyType": {
            "type": "string",
            "anyOf": [
                {
                    "ui:title": "Recreate",
                    "const": "Recreate"
                },
                {
                    "ui:title": "RollingUpdate",
                    "const": "RollingUpdate"
                }
            ],
            "default": "Recreate"
        },
        "image": {
            "type": "object",
            "properties": {
                "pullPolicy": {
                    "type": "string",
                    "anyOf": [
                        {
                            "ui:title": "IfNotPresent",
                            "const": "IfNotPresent"
                        },
                        {
                            "ui:title": "Always",
                            "const": "Always"
                        },
                        {
                            "ui:title": "Never",
                            "const": "Never"
                        }
                    ],
                    "default": "IfNotPresent"                    
                },
                "repository": {
                    "type": "string",
                    "default": "k8s.gcr.io/sig-storage/nfs-subdir-external-provisioner"
                },
                "tag": {
                    "type": "string",
                    "default": "v4.0.2"
                }
            }
        },
        "leaderElection": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "default": true
                }
            }
        },
        "nfs": {
            "type": "object",
            "properties": {
                "server": {
                    "type": "string",
                    "examples": [
                        "127.0.0.1",
                        "nfsserver.example.com"
                    ]
                },
                "path": {
                    "type": "string",
                    "examples": [
                        "/nfs-shares"
                    ]
                },
                "mountOptions": {
                    "type": "string",
                    "examples": [
                        ""
                    ]
                },
                "reclaimPolicy": {
                    "type": "string",
                    "anyOf": [
                        {
                            "ui:title": "Retain",
                            "const": "Retain"
                        },
                        {
                            "ui:title": "Delete",
                            "const": "Delete"
                        }
                    ],
                    "default": "Retain"
                },
                "volumeName": {
                    "type": "string",
                    "default": "nfs-subdir-external-provisioner-root"
                }
            }
        },
        "rbac": {
            "type": "object",
            "properties": {
                "create": {
                    "type": "boolean",
                    "default": true
                }
            }
        },
        "serviceAccount": {
            "type": "object",
            "properties": {
               "create": {
                "type": "boolean",
                "default": true
            },
                "name": {
                    "type": "string",
                    "default": "nfs-subdir-external-provisioner"
                }
            }
        },
        "storageClass": {
            "type": "object",
            "properties": {
                "accessModes": {
                    "type": "string",
                    "anyOf": [
                        {
                            "ui:title": "ReadWriteOnce",
                            "const": "ReadWriteOnce"
                        },
                        {
                            "ui:title": "ReadWriteMany",
                            "const": "ReadWriteMany"
                        },
                        {
                            "ui:title": "ReadOnlyMany",
                            "const": "ReadOnlyMany"
                        },
                        {
                            "ui:title": "ReadWriteOncePod",
                            "const": "ReadWriteOncePod"
                        }
                    ],
                    "default": "ReadWriteOnce"
                },
                "allowVolumeExpansion": {
                    "type": "boolean",
                    "default": true
                },
                "archiveOnDelete": {
                    "type": "boolean",
                    "default": true
                },
                "create": {
                    "type": "boolean",
                    "default": true
                },
                "defaultClass": {
                    "type": "boolean",
                    "default": false
                },
                "name": {
                    "type": "string",
                    "default": "nfs-client"
                },
                "reclaimPolicy": {
                    "type": "string",
                    "anyOf": [
                        {
                            "ui:title": "Delete",
                            "const": "Delete"
                        },
                        {
                            "ui:title": "Retain",
                            "const": "Retain"
                        },
                        {
                            "ui:title": "Recycle",
                            "const": "Recycle"
                        }
                    ],
                    "default": "Delete"
                },
                "volumeBindingMode": {
                    "type": "string",
                    "anyOf": [
                        {
                            "ui:title": "Immediate",
                            "const": "Immediate"
                        },
                        {
                            "ui:title": "WaitForFirstConsumer",
                            "const": "WaitForFirstConsumer"
                        }
                    ],
                    "default": "Immediate"
               }
            }
        }
    }
}